    <style>
        .menu-mizara-open:checked ~ .mz-form-mizara-item:nth-child(3) {
            transition-duration: 290ms;
            transform: translate3d(0,-50px,0);
        }
        .menu-mizara-open:checked ~ .mz-form-mizara-item:nth-child(4) {
            transition-duration: 290ms;
            transform: translate3d(0,-100px,0);
        }
        .menu-mizara-open:checked ~ .mz-form-mizara-item:nth-child(5) {
            transition-duration: 290ms;
            transform: translate3d(0,-150px,0);
        }
        .menu-mizara-open:checked ~ .mz-form-mizara-item:nth-child(6) {
            transition-duration: 290ms;
            transform: translate3d(0,-200px,0);
        }
        .menu-mizara-open:checked ~ .mz-form-mizara-item:nth-child(7) {
            transition-duration: 290ms;
            transform: translate3d(0,-250px,0);
        }
  
    </style>
