<div class="position-relative" style="background:#F4F9FD;">      
    
    <div class="col-12 col-xl-12 p-3">
    
        <div class="row d-flex my-5 flex-column flex-md-row ">
            <div class="col-12 col-md-3 mb-2">
                <h1>Fichier</h1>
            </div>
            <div class="col-12 col-md-7 ">
                <div class="form d-flex">
                    <label for="file_name" class="d-flex justify-content-center align-items-center" style="min-width: 100px;">Nom du fichier</label>
                    <input type="text" class="form form-control p-3 rounded-4 border-0 opacity-50" placeholder="document en format '.xls' " name="" id="file_name" readonly>
                </div>
            </div>
        </div>
    
        <div class=" p-4 bg-white rounded-4">
            <div class="card p-4 border-2 rounded-4" style="border-style:dashed; border-color:#3f8cffb3;">
                <label for="file_upload" class="d-flex justify-content-center align-items-center flex-column">
                    <i class="bi bi-cloud-upload-fill text-primary text-center" style="font-size: 5rem;"></i>
                    <h1 class="m-2 fw-bold text-center">Insérez votre fichier</h1>
                    <p class="opacity-50 text-center">ou glissez et déposez vos fichier depuis votre PC</p>
                </label>
                <input type="file" name="file_upload" id="file_upload" accept=".xls, .xlsx" class="d-none">
            </div>
        </div>
    </div>
</div>